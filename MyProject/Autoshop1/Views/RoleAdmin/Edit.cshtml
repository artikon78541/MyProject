@model RoleEditмodel
<div class="bg-primary m-1 p-1 text-white"><h4>Изменение Роли</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post">
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />
    <hб class="bg-info р-1 text-white">Add То @Model.Role.Name</hб>

    <tаblе class="table table-bordered table-sm">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr>
                <td colspan="2">All Users Are Members</td>
            </tr>
        }
        else
        {
            @foreach (AppUser user in Model.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="IdsToAdd" value="@user.Id">
                    </td>
                </tr>


            }
        }
    </tаblе>
    <hб class="bg-info р-1 text-white">Remove From @Model.Role.Name</hб>
    <tаblе class="table table-bordered table-sm">
        @if (Model.Members.Count() == 0)
        {
            <tr>
                <td colspan="2">No Users Are Members</td>
            </tr>
        }
        else
        {
            @foreach (AppUser user in Model.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="IdsToDelete" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </tаblе>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
